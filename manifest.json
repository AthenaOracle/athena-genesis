          },
          "direction": {
            "type": "string",
            "enum": ["UP", "DOWN", "FLAT"],
            "description": "Predicted movement direction"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score between 0–1"
          },
          "priceTarget": {
            "type": "number",
            "description": "Optional price target for quantitative scoring"
          }
        }
      },
      "timestamp": {
        "type": "string",
        "format": "date-time",
        "description": "ISO 8601 UTC timestamp"
      },
      "meta": {
        "type": "object",
